# LLM API Keys
OPENAI_API_KEY=openai_api_key_placeholder
ANTHROPIC_API_KEY=anthropic_api_key_placeholder
GOOGLE_API_KEY=google_api_key_placeholder

# Data Provider Keys
ALPHA_VANTAGE_API_KEY=alpha_vantage_api_key_placeholder

# Database Configuration
# Mode: sqlite (default) or postgresql
DATABASE_MODE=sqlite

# SQLite (default)
DATABASE_URL=sqlite:///./db/trading.db

# PostgreSQL (when DATABASE_MODE=postgresql)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_DB=trading

# Security
API_KEY=your-secure-api-key
API_KEY_ENABLED=false

# Scheduler
DAILY_ANALYSIS_ENABLED=false
DAILY_ANALYSIS_HOUR=9
DAILY_ANALYSIS_MINUTE=30

# ChromaDB
CHROMA_DB_PATH=./db/chroma

# Prompt Config
PROMPTS_YAML_PATH=./config/prompts.yaml