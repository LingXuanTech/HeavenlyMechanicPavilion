# Stock Agents Monitor - Docker Environment Configuration
# Copy this file to .env and fill in your values
#
# ⚠️ IMPORTANT: Do NOT use default values in production!
# All credentials must be explicitly set.

# =============================================================================
# Environment
# =============================================================================
# Set to "production" for production deployment
ENV=development

# =============================================================================
# Database Configuration
# =============================================================================
# Mode: sqlite (default) or postgresql
DATABASE_MODE=sqlite

# PostgreSQL settings (REQUIRED when DATABASE_MODE=postgresql)
# ⚠️ These have no defaults - you must set them!
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=trading

# =============================================================================
# LLM API Keys (at least one is required)
# =============================================================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# =============================================================================
# Data Provider Keys
# =============================================================================
ALPHA_VANTAGE_API_KEY=

# =============================================================================
# Security
# =============================================================================
# API Key for admin endpoints (REQUIRED when API_KEY_ENABLED=true)
API_KEY=
# Set to true in production to require API key for admin routes
API_KEY_ENABLED=false

# CORS allowed origins (comma-separated, e.g., "http://localhost:3000,https://yourdomain.com")
CORS_ORIGINS=http://localhost:3000

# =============================================================================
# Scheduler
# =============================================================================
DAILY_ANALYSIS_ENABLED=false
DAILY_ANALYSIS_HOUR=9
DAILY_ANALYSIS_MINUTE=30
