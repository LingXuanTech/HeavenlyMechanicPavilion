# Stock Agents Monitor - Docker Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Database Configuration
# =============================================================================
# Mode: sqlite (default) or postgresql
DATABASE_MODE=sqlite

# PostgreSQL settings (only used when DATABASE_MODE=postgresql)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=trading

# =============================================================================
# LLM API Keys
# =============================================================================
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key
GOOGLE_API_KEY=your-google-key

# =============================================================================
# Data Provider Keys
# =============================================================================
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# =============================================================================
# Security
# =============================================================================
API_KEY=your-secure-api-key
API_KEY_ENABLED=false

# =============================================================================
# Scheduler
# =============================================================================
DAILY_ANALYSIS_ENABLED=false
DAILY_ANALYSIS_HOUR=9
DAILY_ANALYSIS_MINUTE=30
